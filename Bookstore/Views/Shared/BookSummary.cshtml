@model Book
@*card adds boxes around the texts and the outline adds a space*@
<div class="card card-outline-primary m-1 p-1">

    @*this class makes a color/fade behind the book title*@
    <div class="bg-faded p-1">
        <h4>
            @Model.Title
            <span class="badge badge-pill badge-primary " style="float:right">
                <small>@Model.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
  
        <div class="card-text p-1">Author: @Model.Author</div>
        <div class="card-text p-1">Publisher: @Model.Publisher</div>
        <div class="card-text p-1">ISBN: @Model.Isbn</div>
        <div class="card-text p-1">Classification: @Model.Classification</div>
        <div class="card-text p-1">Page Amount: @Model.PageCount</div>
    @*form to be able to purchase individual books and sends info to the shopping cart.cshtml.cs page*@
    <form method="post" asp-page="/ShoppingCart">

        <input type="hidden" asp-for="@Model.BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />

        @*made the purchase button large*@
        <span class="card-text">
            <button type="submit" class="btn btn-success btn-lg float-end">Purchase</button>
        </span>
    </form>

</div>
<br />

