<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>BookStore</title>
    @*<link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />*@
    <link href="~/lib/css/bootstrap.css" rel="stylesheet" />
    <link href="/lib/font-awesome/css/all.min.css" rel="stylesheet" />
</head>
<body>
    @*this shows the shpping cart icon at the top*@
    <div class="bg-dark text-white p-2">
        <div class="container-fluid">
            <div class="row">
                <div class="col navbar-brand">SPORTS STORE</div>
                <div class="col-6 text-right">
                    <vc:cart-summary />
                </div>
            </div>
        </div>
    </div>
    @*this div brings black bar on the top w/ the nav bar*@
    <div class="bg-dark text-white p-2">
        <span class="navbar-brand ml-2">HBS</span>
    </div>
    @*this makes 3 columns in the row*@
    <div class="row m-1 p-1">
        <div id="categories" class="col-3">
            <vc:types></vc:types>
        </div>
        <div class="col-9">
            @RenderBody()
        </div>
    </div>
    @*chnaged the footer styling*@
    <center><footer class="blockquote-footer">© 2023 HBS, Inc. All Rights Reserved</footer></center>
</body>
</html>